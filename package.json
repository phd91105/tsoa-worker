{
  "name": "tsoa-worker",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "scripts": {
    "deploy": "run tsoa && wrangler deploy --minify",
    "dev": "wrangler dev",
    "dev:bun": "bun --hot src/index.ts",
    "format": "prettier --write src/**/*.ts",
    "postinstall": "run tsoa && husky install",
    "lint": "eslint --fix src/**/*.ts --quiet",
    "tsoa": "tsoa spec-and-routes"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231218.0",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^4.2.1",
    "hono": "^3.12.5",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^2.8.8",
    "prettier-plugin-organize-imports": "^3.2.2",
    "ts-node": "^10.9.2",
    "tsoa": "^6.0.1",
    "tsoa-hono": "^1.2.1",
    "tsyringe": "^4.8.0",
    "typescript": "^4.9.5",
    "wrangler": "^3.22.5"
  },
  "packageManager": "yarn@4.0.2"
}
